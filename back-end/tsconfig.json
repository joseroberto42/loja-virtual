{
    "compilerOptions": {
      "target": "ES2020",                       // Define a versão do JavaScript para o código compilado
      "module": "commonjs",                     // Define o sistema de módulos a ser usado
      "lib": ["ES2020", "DOM"],                 // Inclui as bibliotecas ES2020 e DOM para uso no frontend
      "outDir": "./dist",                       // Diretório para onde o código compilado será emitido
      "rootDir": "./src",                       // Diretório de onde o código TypeScript será compilado
      "strict": true,                           // Ativa todas as verificações estritas
      "esModuleInterop": true,                  // Permite a interoperabilidade entre CommonJS e ES Modules
      "skipLibCheck": true,                     // Ignora a verificação dos arquivos de declaração de biblioteca
      "forceConsistentCasingInFileNames": true  // Garante a consistência na nomenclatura dos arquivos
    },
    "include": [
      "src/**/*"  // Inclui todos os arquivos TypeScript dentro do diretório src
    ],
    "exclude": [
      "node_modules", // Exclui a pasta node_modules
      "dist"          // Exclui a pasta dist
    ]
  }
  